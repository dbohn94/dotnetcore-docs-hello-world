<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - databohn.com</title>
    <link rel="stylesheet" href="styles.css">
    
    <link rel="icon" href="~/lib/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="~/lib/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*(<link rel="stylesheet" href="~/dotnetcoresample.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/themes/styles.css" asp-append-version="true" />

</head>
<body>
    <partial name="_Navbar" />

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>David Bohn</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #343a40 !important;
        }
        .jumbotron {
            background-color: #007bff;
            color: white;
            padding: 100px 0;
            text-align: center;
            font-family: 'Segoe UI';
            border-radius: 5px;
            height: 275px;
        }
        .feature {
            background-color: #ffffff;
            padding: 50px 0;
            text-align: center;
            border-radius: 4px;
        }
        .footer {
            background-color: #343a40;
            color: #ffffff;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- This is where the content of your views will be rendered -->
    </div>
        </main>
    </div>

<div class="slider">
  <div class="slide fade">
    <img src="slide1.jpg" style="width:100%">
  </div>
  <div class="slide fade">
    <img src="slide2.jpg" style="width:100%">
  </div>
  <div class="slide fade">
    <img src="slide3.jpg" style="width:100%">
  </div>
</div>


    <footer class="border-top footer text-muted"> <!-- Footer content here -->
        <div class="container">
            &copy; 2024 - David Bohn - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Include JavaScript files here -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~themes/scripts.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
